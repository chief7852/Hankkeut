    	$('#btnConnect2').on('click', function() {
    		idvalue = $('#userId').val().trim();
    		passvalue = $('#userPass').val().trim();
    		console.log(idvalue + passvalue);
    		$.ajax({
    			url: '/wcggame/loginMember.do',
    			type: 'post',
    			data: {
    				"id": idvalue,
    				"pass": passvalue
    			},
    			success: function(res) {
    				alert(res.sw);
    				if (res.sw == "로그인완료") {
    					$('#btnConnect').attr("disabled", false);
    					
    				}
    			},
    			error: function(xhr) {
    				alert("상태 : " + xhr.status);
    			},

    			dataType: 'json'
    		})
    		
